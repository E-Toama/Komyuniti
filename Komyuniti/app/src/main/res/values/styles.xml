<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleStyle">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="h1">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="h2">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="h3">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="selected">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textColor">@color/blue2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="text">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="EditTextStyle">
        <item name="android:background">@drawable/text_bg</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey4</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:backgroundTint">@color/blue2</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:height">55dp</item>
        <item name="cornerRadius">50dp</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textColor">@color/blue3</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>